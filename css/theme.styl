@import './mixin'

body
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif
  overflow-x: hidden
  -webkit-user-select: none
  margin: 0
  padding: 0
  color: #000
  background: #FFF

* 
  -webkit-tap-highlight-color: rgba(0,0,0,0)

body.stage 
  > header
    ios-header()

  > article
    bottom: tabbarSize

  > footer

    //background: -webkit-gradient(linear, left top, left bottom, from(rgba(255, 255, 255, 0.3)), color-stop(0.5, rgba(255, 255, 255, 0.2)), color-stop(0.5, rgba(255, 255, 255, 0))), #000
    background: -webkit-linear-gradient(top, #1C1C1C 0%, #1C1C1C 2%, #575757 2%, #303030 5%, #141414 51%, black 51%, black 100%)

  // Tabbar
  > footer
    height: tabbarSize
    -webkit-box-pack: justify
    display: -webkit-box

    .nav-item
      margin-top: 3px
      -webkit-box-flex: 1
      color: #999
      border-radius: 4px

      .nav-label
        font-weight: bold
        font-size: 10px
        text-align: center

      .icon
        display: block
        width: 30px
        height: 30px
        margin: 0 auto
        //background: red
        -webkit-mask-image: url(images/tabbar-icons.png)
        -webkit-mask-size: 90px 30px
        -webkit-mask-repeat: no-repeat
        //background: -webkit-linear-gradient(top, rgba(255, 255, 255, 0.296875) 25%, rgba(255, 255, 255, 0) 75%)
        background: -webkit-linear-gradient(top, rgba(255, 255, 255, 0.6) 25%, rgba(255, 255, 255, .4) 75%)
        //background: white

        &.explore
          -webkit-mask-position: 0 0 !important

        &.contacts
          -webkit-mask-position: -30px 0 !important

        &.account
          -webkit-mask-position: -60px 0 !important

    .active.nav-item
      color: #FFF
      background: rgba(255,255,255,0.13)

      .icon
        background-image: -webkit-linear-gradient(276deg, white 0%, #7DB9EE 52%, rgba(125, 185, 238, 0) 52%), -webkit-linear-gradient(top, #0429E4 0%, #40CEFB 100%)

tabbar-image($image, $size= 30px 30px, $position= 50% 0%)
  .icon
    -webkit-mask-image: image-url($image)
    -webkit-mask-size: $size
    -webkit-mask-position: $position

.panel
  > header
    height: headerSize
    line-height: headerSize
    border-bottom: 1px solid black !important

    h2
      ios-header-text()
    
    button
      position: absolute
      left: 0
      top: 0
      ios-button()

.button
  ios-button()

  &.blue
    background-color: #325FD1

  &.red
    background-color: #bd1520

  &.back
    left:5px;/*change the position*/
    //top:10px;/*change the position*/
    position:absolute;
    z-index : 0;
    border-radius: 6px;
    -webkit-border-top-left-radius : 10px 15px;
    -webkit-border-bottom-left-radius : 10px 15px;
    border-bottom: 1px solid rgba(255,255,255,0.3);
    box-shadow :-1px -1px 0px rgba(0,0,0,0.2)inset, 0 1px 2px rgba(0,0,0,0.8)inset;
    font-size : 11px;
    display : block;
    text-align:center;
    color:#fff;
    line-height : 30px;
    -webkit-background-size : 30px;

  &.back:before
    position:absolute;
    top:9.9%;
    left:-5px;
    -webkit-background-size : 22px 22px;
    background-position :-2px -1.5px;
    background-color: rgba(74,108,155,1);/*change to the same as the main element*/
    background-image : -webkit-gradient(linear, left bottom, right top, from(rgba(0,0,0,0)), color-stop(0.5, rgba(0,0,0,0)), color-stop(0.5, rgba(255,255,255,0.1)), to(rgba(255,255,255,0.3)));
    height : 25px;
    width: 25px;
    -webkit-transform : rotate(-45deg) skew(-10deg, -10deg);
    -webkit-border-top-right-radius : 100px 40px;
    -webkit-border-top-left-radius : 30px 2px;
    -webkit-border-bottom-right-radius : 2px 30px;
    -webkit-border-bottom-left-radius : 40px 100px;
    z-index : 1;
    content : ' ';
    border-left : 1.5px solid rgba(255,255,255,0.3);
    box-shadow :  1px 1px 0 rgba(0,0,0,0.2) inset, -1px 1px 1px rgba(0,0,0,0.5) inset; -webkit-mask-image : -webkit-gradient(linear, left top, right bottom, from(#000000), color-stop(0.33,#000000), color-stop(0.5, transparent), to(transparent));

