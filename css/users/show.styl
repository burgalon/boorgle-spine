.thumb
  border-radius: 2px

.showView
  h2, p
    margin: 0

  .list-group
    margin: 5px 0

    .list-item
      background: #F6F6F7
      padding: 15px 0
      margin: 0 12px 0
      border-width: 1px 1px 1px 1px
      border-style: solid
      border-color: #A9ACAF

      &:first-child
        border-top-right-radius: 8px
        border-top-left-radius: 8px

      &:last-child
        border-bottom-right-radius: 8px
        border-bottom-left-radius: 8px

      &.transparent
        border: none
        background: transparent

      .list-label
        //background: red
        display: inline-block
        text-align: right
        color: #3c9aff
        font-size: 14px
        font-weight: bold
        padding: 0 10px 0 10px
        width: 63px
        vertical-align: top


      .list-data
        //background: green
        width: 170px
        display: inline-block
        font-size: 14px
        font-weight: bold

        a
          text-decoration: none
          color: inherit

.showView .thumb-list.list-group
  .list-label
    text-align: left
    .thumb
      border: 1px solid #999
  .list-data
    font-weight: normal

.showView.panel > article
  background: -webkit-gradient(linear, 0% 50%, 100% 50%, color-stop(71.429%, #C5CCD4), color-stop(71.429%, #CBD2D8), color-stop(100%, #CBD2D8))
  background-size: 7px 512px

