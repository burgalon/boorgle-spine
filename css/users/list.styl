.users.listView

    .search-field
      padding:5px
      background: #d6dde2;
      background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#d6dde2), color-stop(100%,#b1bbc3));
      background: -webkit-linear-gradient(top,  #d6dde2 0%,#b1bbc3 100%);
      background: linear-gradient(to bottom,  #d6dde2 0%,#b1bbc3 100%);
      box-shadow: inset 0 1px 0 #e3e9ed

      > input[type=search]
        margin:0
        font-size:16px