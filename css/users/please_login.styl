n-slides=4
.please_login
  header
    display: none !important

  > article
    text-align: center

    .upper-pane
      overflow-x: hidden
      width: 100%
      background: #DDD3B7
      border-bottom: 1px solid #ccc3B7
      position: relative

      .bullets
        position: absolute
        bottom: 0
        left: 50%
        width: n-slides * 20px
        margin-left: -(@width / 2)
        height: 25px
        text-align: center
        z-index: 1

        .bullet
          float: left
          border: solid rgba(0,0,0, 0.25) 3px
          border-radius: 3px
          margin: 10px 6px

          &.selected
            border: solid #4d4d4d 3px

      #slides
        width: 100% * n-slides
        white-space: nowrap
        -webkit-transform: translate3d(0px,0,0)

      .slide
        width: (100% / n-slides)
        float: left
        .img
          margin: 0 auto

        h3
          color: #3d392e
          margin: 10px 0

        .text
          color: #6d6658
          padding-bottom: 10px
          font-size: 14px
          height: 49px

      .animate
        -webkit-transition: all .3s ease-out

      //.slide-0
      //  background: red
      //.slide-1
      //  background: green
      //.slide-2
      //  background: orange
      //.slide-3
      //  background: purple

      .slide-0 .img
        width 300px
        height: 299px
        bg('images/please-login-0.svg', @width, @height)

      .slide-1 .img
        width 265px
        height: 136px
        bg('images/please-login-1.png', @width, @height)
      .slide-2 .img
        width: 215px
        height: 200px
        bg('images/please-login-2.png', @width, @height)
      .slide-3 .img
        width: 240px
        height: 200px
        bg('images/please-login-3.png', @width, @height)


    .bottom-pane
      background: white

      .gmail
        border: none
        width: 175px
        height: 37px
        background: url('images/connect-with-gmail.png') transparent
        background-size: @width @height

      .signup
        margin: 20px 0
        width: 125px
        height: 27px
        line-height: @height

      .subtitle
        color: #999
        font-size: 14px
        margin 10px 0

      .login
        color: #555
        text-decoration: underline
        height: 27px
        line-height: @height

        &:hover
          color: #ffa500
