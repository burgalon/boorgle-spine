.please_login 
	> article
		background: #013739
		image: 'images/connect-bg.jpg'
		background-position: 50% 0
		text-align: center

		h1
			background: transparent
			image: 'images/logo.png' 163px 78px
			width: 163px
			height: 78px
			margin: 45px auto 20px auto
			text-indent: -9999px

		h2 
			color: white
			font-weight: lighter
			text-shadow: 0px 1px 3px #020202
			font-size: 15px
			margin-bottom: 45px

		.desc
			color: #001b1c
			text-shadow: 0px 1px 2px #568B92
			font-weight: normal
			font-size: 12px
			margin: 10px auto 0 auto
			width: 200px

		.login-button
			background: transparent
			image: 'images/login-button.png' 238px 94px
			width: 238px
			height: 46px
			border: none
			margin: 0 auto

			&:hover, &:active
				background-position: 0 -47px

			span
				display: none